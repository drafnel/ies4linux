# Discover ies4linux installation folder
if [ `expr match "$0" '/'` =  "1" ]; then
	IES4LINUX=$0
else
	IES4LINUX=`pwd`/$0
fi
export IES4LINUX=${IES4LINUX:0:((${#IES4LINUX}-9))}
cd $IES4LINUX

# Do the installation
source lib/configure.sh
source lib/init.sh
source lib/functions.sh
source lib/download.sh

create_initial_folders
do_basic_installation

install_ie6
install_ie55
install_ie5

install_plugins
remove_extra_folders

print_section IEs4Linux installations finished!





